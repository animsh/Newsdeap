<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsDeap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark_color</item>
        <item name="colorOnPrimary">@color/dark_primary_color</item>
        <item name="text_color">@color/dark_text_color</item>
        <item name="background_color">@color/dark_primary_color</item>
        <item name="search_color">#1F1F1F</item>
        <item name="icon_tint_color">@color/dark_icon_tint_color</item>
        <item name="indicator_color">@color/indicator</item>
        <item name="android:textColorSecondary">@color/dark_icon_tint_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/dark_primary_dark_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/boubaround</item>
    </style>

    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/boubaround_bold</item>
        <item name="android:fontFamily">@font/boubaround_bold</item>
    </style>
</resources>