<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsDeap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/light_bg_color</item>
        <item name="colorOnPrimary">@color/light_bg_color</item>
        <item name="text_color">@color/light_text_color</item>
        <item name="background_color">@color/light_bg_color</item>
        <item name="search_color">@color/white</item>
        <item name="icon_tint_color">?attr/colorControlNormal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/boubaround</item>
    </style>

    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/boubaround_bold</item>
        <item name="android:fontFamily">@font/boubaround_bold</item>
    </style>
</resources>